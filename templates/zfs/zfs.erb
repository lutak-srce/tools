<% if @zfs_arc_min -%>
# zfs_arc_min
# 
# Determines the minimum size of the ZFS Adaptive Replacement Cache (ARC).
# Default: 12% of memory on on large memory systems
options zfs zfs_arc_min=<%= @zfs_arc_min %>

<% end -%>
# zfs_arc_max
# 
# Determines the maximum size of the ZFS Adaptive Replacement Cache (ARC).
# Default: 75% of memory on systems with less than 4 GB of memory
#          physmem minus 1 GB on systems with greater than 4 GB
options zfs zfs_arc_max=<%= @zfs_arc_max %>
